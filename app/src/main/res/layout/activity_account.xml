<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Account">


  <TextView
      android:id="@+id/account_text"
      android:layout_width="138dp"
      android:layout_height="52dp"
      android:layout_marginStart="100dp"

      android:layout_marginTop="70dp"
      android:layout_marginEnd="70dp"
      android:layout_marginBottom="70dp"
      android:text="Account"
      android:textColor="@color/pink"
      android:textSize="30sp"
      tools:layout_editor_absoluteX="123dp"

      tools:layout_editor_absoluteY="81dp" />

  <Button
      android:id="@+id/myTickets_button"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:text="My Tickets"
      android:layout_marginStart="70dp"
      android:layout_below="@id/account_text"
      android:layout_marginTop="20dp"

      />

  <Button
      android:id="@+id/ticketCancellation_button"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:text="Ticket Cancellation"

      android:layout_marginStart="70dp"
      android:layout_below="@id/myTickets_button"
      android:layout_marginTop="20dp"/>

  <Button
      android:id="@+id/logout_button"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:text="Log Out"
      android:layout_marginStart="70dp"
      android:layout_below="@id/ticketCancellation_button"
      android:layout_marginTop="16dp"/>



  <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="#fff"
        app:itemTextColor="@color/white"
        app:menu="@menu/nav_menu" />


</RelativeLayout>



